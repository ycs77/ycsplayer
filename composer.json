{
    "name": "ycs77/ycsplayer",
    "type": "project",
    "description": "線上影音點播包廂 - 像卡拉 OK 點歌機一樣選影片或點歌~🎵 跟遠端的朋友們一起同步觀賞~✨",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Yang",
            "email": "yangchenshin77@gmail.com"
        }
    ],
    "homepage": "https://github.com/ycs77/ycsplayer",
    "require": {
        "php": "^8.1",
        "additionapps/flexible-presenter": "^4.0",
        "grosv/laravel-passwordless-login": "^1.9",
        "guzzlehttp/guzzle": "^7.2",
        "inertiajs/inertia-laravel": "^1.3.0",
        "jenssegers/agent": "^2.6",
        "laravel/fortify": "^1.17",
        "laravel/framework": "^10.48.23",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "league/flysystem-aws-s3-v3": "^3.0",
        "php-ffmpeg/php-ffmpeg": "^1.1",
        "pion/laravel-chunk-upload": "^1.5",
        "predis/predis": "^1.1",
        "pusher/pusher-php-server": "^7.0",
        "spatie/image": "^2.2",
        "spatie/laravel-medialibrary": "^10.0",
        "spatie/laravel-permission": "^5.10",
        "symfony/http-client": "^6.4.15",
        "symfony/mailgun-mailer": "^6.3",
        "vinkla/hashids": "^11.0",
        "ycs77/inertia-laravel-components": "^0.4.2",
        "ycs77/inertia-laravel-ssr-head": "^1.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "pestphp/pest": "^2.16",
        "pestphp/pest-plugin-laravel": "^2.2",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "grosv/laravel-passwordless-login"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
